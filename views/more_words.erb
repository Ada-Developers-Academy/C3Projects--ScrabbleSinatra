<h1>Score Multiple Words</h1>
<form action="" method="post" accept-charset="utf-8">
  <label for="words">Enter your words:</label>
  <textarea name="words" value="" id="words"></textarea>
  <input type="submit" value="Submit">
</form>

<% unless @words_scores.nil? %>
  <% @words_scores.each do |word, score| %>
    <p><%= word %>: <%= score %></p>
  <% end %>
<% end %>
