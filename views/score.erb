<form action="" method="post" accept-charset="utf-8">

  <label for="word">Word</label>
  <input type="text" name="word" id="word">

  <input type="submit" value="Submit">
</form>

<p>Word is: <%= @word %></p>
<p>Score is: <%= @score %></p>
<p>Letter scores:</p>
<% if @word %>
	<% @word.split("").each do |letter| %>
		<p><%= "#{letter}: #{Scrabble.score_letter(letter)}" %></p>
	<% end %>
<% end %>

